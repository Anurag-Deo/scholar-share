# ScholarShare Environment Configuration
# Copy this file to .env and fill in your actual API keys and configuration values

# =============================================================================
# LLM Configuration
# =============================================================================

# Mistral AI API Key (optional)
MISTRAL_API_KEY=your_mistral_api_key_here

# =============================================================================
# Heavy Model Configuration (for complex tasks)
# =============================================================================

# Provider: openai, mistral, anthropic, etc.
HEAVY_MODEL_PROVIDER=openai
# Model name for heavy processing tasks
HEAVY_MODEL_NAME=gpt-4-turbo
# API key for heavy model provider
HEAVY_MODEL_API_KEY=your_heavy_model_api_key_here
# Custom base URL for heavy model API (optional)
HEAVY_MODEL_BASE_URL=

# =============================================================================
# Light Model Configuration (for simple tasks)
# =============================================================================

# Provider: openai, mistral, anthropic, etc.
LIGHT_MODEL_PROVIDER=openai
# Model name for light processing tasks
LIGHT_MODEL_NAME=gpt-3.5-turbo
# API key for light model provider
LIGHT_MODEL_API_KEY=your_light_model_api_key_here
# Custom base URL for light model API (optional)
LIGHT_MODEL_BASE_URL=

# =============================================================================
# Coding Model Configuration (for code generation tasks)
# =============================================================================

# Provider for coding tasks
CODING_MODEL_PROVIDER=openai
# Model name for coding tasks
CODING_MODEL_NAME=gpt-4-1106-preview
# API key for coding model provider
CODING_MODEL_API_KEY=your_coding_model_api_key_here
# Base URL for coding model API
CODING_MODEL_BASE_URL=https://api.openai.com/v1/chat/completions

# =============================================================================
# Image Generation Configuration
# =============================================================================

# API key for image generation (usually OpenAI DALL-E)
IMAGE_GEN_API_KEY=your_image_generation_api_key_here
# Base URL for image generation API
IMAGE_GEN_BASE_URL=https://api.openai.com/v1/images/generations
# Image generation model
IMAGE_GEN_MODEL=dall-e-3
# Image size for generated images
IMAGE_GEN_IMAGE_SIZE=1024x1024
# Image quality (standard or hd)
IMAGE_GEN_IMAGE_QUALITY=standard
# Image style (vivid or natural)
IMAGE_GEN_IMAGE_STYLE=vivid

# =============================================================================
# Third-Party Service APIs
# =============================================================================

# DeepInfra API Key (for alternative image generation)
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# Dev.to API Key (for publishing blog posts)
DEVTO_API_KEY=your_devto_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (SQLite by default, can be PostgreSQL, MySQL, etc.)
DATABASE_URL=sqlite:///./scholarshare.db

# =============================================================================
# Application Settings
# =============================================================================

# Enable debug mode (True/False)
DEBUG=True
# Host address to bind the server
HOST=0.0.0.0
# Port number for the server
PORT=7860